@inherits LayoutComponentBase

<MudThemeProvider/>
<MudPopoverProvider/>
<MudSnackbarProvider/>
<MudDialogProvider/>

<MudDrawerContainer Class="mud-height-full">
    <MudDrawer Open="true" Fixed="false" Elevation="1" Variant="@DrawerVariant.Persistent" OpenMiniOnHover="true">
        <MudNavMenu>
            <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.AccountCircle">Account</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.LibraryBooks">Library</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Group">Community</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudAppBar Color="Color.Primary" Fixed="false" Class="d-flex justify-end">
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" />
    </MudAppBar>
    <MudContainer Class="mud-height-full d-flex justify-center">
        @Body
    </MudContainer>
</MudDrawerContainer>