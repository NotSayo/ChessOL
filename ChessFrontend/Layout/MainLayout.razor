@inherits LayoutComponentBase
@using MudBlazor

<!-- Move AppBar OUTSIDE the Layout -->
<MudAppBar Elevation="2" Color="Color.Primary" Dense="true">
    <MudSpacer />
    <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit"
                   Href="https://github.com/notsayo/chessol" Target="_blank" />
</MudAppBar>

<MudLayout>

    <MudDrawerContainer Class="mud-height-full">

        <!-- LEFT NAVIGATION (Full Height) -->
        <MudDrawer Open="true" Fixed="true" Elevation="2" Variant="DrawerVariant.Persistent" Class="drawer-full">
            <MudNavMenu Class="pt-6">
                <MudText Typo="Typo.h6" Class="ml-4 text-primary">
                    ♟ ChessOL
                </MudText>
                <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
                <MudNavLink Href="/lobbys" Icon="@Icons.Material.Filled.Hub">View Lobbys</MudNavLink>
                <MudNavLink Href="/account" Icon="@Icons.Material.Filled.ManageAccounts">Account</MudNavLink>
                <MudNavLink Href="https://github.com/notsayo/chessol" Icon="@Icons.Material.Filled.Source">GitHub</MudNavLink>
            </MudNavMenu>
        </MudDrawer>

        <MudMainContent>
            <MudContainer MaxWidth="MaxWidth.Large" Class="page-content">
                @Body
            </MudContainer>
        </MudMainContent>

    </MudDrawerContainer>
</MudLayout>
