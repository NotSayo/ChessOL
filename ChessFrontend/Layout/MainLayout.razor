@inherits LayoutComponentBase
@using MudBlazor

<MudLayout>

    <!-- Burger Icon Button - Fixed on screen -->
    <MudIconButton Icon="@Icons.Material.Filled.Menu"
                   Color="Color.Primary"
                   Class="burger-toggle"
                   OnClick="@ToggleDrawer" />

    <MudDrawerContainer Class="mud-height-full">

        <MudDrawer @bind-Open="_drawerOpen"
                   Fixed="true"
                   Elevation="2"
                   Variant="DrawerVariant.Responsive"
                   Class="drawer-full">

            <MudNavMenu>
                <MudIconButton Icon="@Icons.Material.Filled.Menu"
                               Color="Color.Primary"
                               OnClick="@ToggleDrawer" />
            </MudNavMenu>

            <MudNavMenu Class="pb-4">
                <MudText Typo="Typo.h6" Class="ml-4 mt-2 text-primary">
                    ♟ ChessOL
                </MudText>

                <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
                <MudNavLink Href="/gameQueue" Icon="@Icons.Material.Filled.People">Queue</MudNavLink>
                <MudNavLink Href="https://github.com/notsayo/chessol" Icon="@Icons.Material.Filled.Source">GitHub</MudNavLink>
            </MudNavMenu>

        </MudDrawer>

        <MudMainContent Style="overflow-y: auto;">
            <MudContainer MaxWidth="MaxWidth.False"
                          Class="page-wrapper d-flex flex-column"
                          Style="padding: 2rem;">
                @Body
            </MudContainer>
        </MudMainContent>

    </MudDrawerContainer>
</MudLayout>

@code {
    private bool _drawerOpen = true;

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}